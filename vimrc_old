" ------------------ settings --------------------
set number " Show absolute line numbers on the left.
filetype indent plugin on " Auto-detect un-labeled filetypes
syntax on " Turn syntax highlighting on
set ai " Sets auto-indentation
set si " Sets smart-indentation
set noswapfile " Prevent vim from creating .swp file
set nobackup
set cursorline " Highlight current cursor line
set smarttab " Be smart when using tabs
set showmatch " Show matching brackets when text indicator is over them
set nocompatible
set encoding=UTF-8
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set completeopt = preview
set t_Co=256
set termguicolors
set bg=dark
colorscheme gruvbox

" ---------------- plugins --------------------
call plug#begin('~/.vim/plugged')
Plug 'morhetz/gruvbox'
Plug 'neoclide/coc.nvim', {'branch': 'release'} 
Plug 'jiangmiao/auto-pairs'
Plug 'ryanoasis/vim-devicons'
Plug 'kien/rainbow_parentheses.vim'
Plug 'pappasam/coc-jedi', { 'do': 'yarn install --frozen-lockfile && yarn build', 'branch': 'main' }
Plug 'preservim/nerdtree'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'mhinz/vim-startify'
Plug 'lilydjwg/colorizer
Plug 'scrooloose/nerdcommenter'
call plug#end()

" ------------------ mapppings ------------------
Let mapleader = " " 
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-n> :NERDTree<CR>
nnoremap <C-t> :NERDTreeToggle<CR>
nnoremap <C-f> :NERDTreeFind<CR>

